/*页头*/
.header_box{
	position:fixed;
	left:0;top:0;
	width:100%;
	height:88px;
	background:url("../img/bg_top.png") no-repeat;
	background-size:100% 100%;
	z-index:102;
}
.header_lj_box{
	background:black;
	position:absolute;
	top:50px;
	left:5%;
}
.yc{
	display:none;
}
.header_lj_box>li>a:link,.header_lj_box>li>a:active,
.header_lj_box>li>a:visited,.header_lj_box>li>a:hover{
	font-size:1em;
	color: #ccc;
    font-weight: bold;
}
.header_jrgw{
	float:right;
	margin-right:5%;
	margin-top:20px;
    display: block;
    width: 30%;
    height:40px;
    font-size: 0.8em;
    font-weight: bold;
    text-align: center;
    line-height:40px;
    color:white;
    background: #e69800;
    text-shadow: 1px 1px 1px #b27601;
	border-radius:3%;
}
.header_logo{
	float:right;
	width:95px;
	height:75%;
}
.header_xlcd{
	display:block;
	width:20px;
	border:2px solid white;
	margin-top:5px;
}
.header_xlcd_box{
	margin-top:24px;
	float:left;
	margin-left:5%;
}